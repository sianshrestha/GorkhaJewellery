<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gorkha.gorkhajewellery.ui.InvoiceController"
            prefHeight="850.0" prefWidth="1250.0" style="-fx-background-color: #f4f4f4;">

    <top>
        <VBox spacing="10.0" style="-fx-background-color: white; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <Text text="Gurkha Gold And Silver Palace" style="-fx-font-weight: bold; -fx-fill: #800000; -fx-font-size: 28px;"/>
                <Region HBox.hgrow="ALWAYS" />

                <VBox alignment="CENTER_RIGHT" spacing="5">
                    <Button text="ðŸ“œ View Sales History" onAction="#onViewHistory" style="-fx-background-color: #555; -fx-text-fill: white;"/>
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Label text="Sold By:" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="soldByField" promptText="Staff Name" prefWidth="120"/>
                    </HBox>
                </VBox>

                <VBox alignment="CENTER_RIGHT" spacing="5">
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Label text="Rate (22K):" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="rate22kField" text="1340" prefWidth="80"/>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Label text="Rate (24K):" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="rate24kField" text="1430" prefWidth="80"/>
                    </HBox>
                </VBox>
            </HBox>
            <Separator />
            <GridPane hgap="15.0" vgap="10.0">
                <Label text="Customer Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="customerNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label text="Phone Number:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <TextField fx:id="phoneField" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="customerAddressField" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="3"/>
            </GridPane>
        </VBox>
    </top>

    <center>
        <VBox spacing="10.0" style="-fx-padding: 20;">
            <TableView fx:id="itemTable" VBox.vgrow="ALWAYS" editable="true">
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                <columns>
                    <TableColumn fx:id="descCol" text="Particulars" minWidth="150.0"/>
                    <TableColumn fx:id="purityCol" text="Purity" minWidth="60"/>
                    <TableColumn fx:id="netWtCol" text="Net Weight (Lal)" minWidth="60.0"/>
                    <TableColumn fx:id="wastageCol" text="Wastage" minWidth="60.0"/>
                    <TableColumn fx:id="totalWeightCol" text="Total Weight" minWidth="60.0"/>
                    <TableColumn fx:id="stoneCol" text="Stones ($)" minWidth="60.0"/>
                    <TableColumn fx:id="wagesCol" text="Wages ($)" minWidth="60.0"/>
                    <TableColumn fx:id="totalCol" text="Total Amount ($)" minWidth="100.0" style="-fx-alignment: CENTER-RIGHT; -fx-font-weight: bold;"/>
                </columns>
            </TableView>
            <Button text="+ Add New Line" onAction="#addEmptyRow"/>
        </VBox>
    </center>

    <bottom>
        <VBox style="-fx-background-color: #e8e8e8; -fx-padding: 20;">
            <HBox spacing="50" alignment="TOP_RIGHT">
                <VBox spacing="10" alignment="BOTTOM_LEFT">
                    <Button text="Start New Invoice" onAction="#onNewInvoice" style="-fx-background-color: #666; -fx-text-fill: white; -fx-font-size: 14px;"/>
                    <Button text="SAVE &amp; PRINT" onAction="#onSaveAndPrint" style="-fx-background-color: #800000; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 10 30;"/>
                </VBox>

                <GridPane hgap="10" vgap="5" alignment="CENTER_RIGHT">
                    <columnConstraints> <ColumnConstraints halignment="RIGHT"/> <ColumnConstraints prefWidth="120"/> </columnConstraints>

                    <Label text="Subtotal:" GridPane.rowIndex="0" GridPane.columnIndex="0"/> <Label fx:id="subTotalLabel" text="0.00" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    <Label text="Old Gold ($):" GridPane.rowIndex="1" GridPane.columnIndex="0"/> <TextField fx:id="oldGoldField" text="0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    <Label text="Discount ($):" GridPane.rowIndex="2" GridPane.columnIndex="0"/> <TextField fx:id="discountField" text="0" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    <Label text="GST (%):" GridPane.rowIndex="3" GridPane.columnIndex="0"/> <TextField fx:id="gstField" text="0" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    <Label text="GRAND TOTAL:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/> <Label fx:id="grandTotalLabel" text="0.00" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-font-weight: bold;"/>
                    <Label text="Advance Paid:" GridPane.rowIndex="5" GridPane.columnIndex="0"/> <TextField fx:id="advanceField" text="0" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                    <Label text="BALANCE DUE:" GridPane.rowIndex="6" GridPane.columnIndex="0" textFill="red" style="-fx-font-weight: bold;"/> <Label fx:id="balanceLabel" text="0.00" GridPane.rowIndex="6" GridPane.columnIndex="1" textFill="red" style="-fx-font-weight: bold;"/>
                </GridPane>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>