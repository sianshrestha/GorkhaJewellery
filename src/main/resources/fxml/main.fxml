<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>
        <?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gorkha.gorkhajewellery.ui.InvoiceController"
            prefHeight="900.0" prefWidth="1300.0">

<padding>
    <Insets top="20" right="20" bottom="20" left="20"/>
</padding>

<top>
    <VBox spacing="15.0" style="-fx-background-color: -color-bg-default; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <VBox>
                <Text text="GORKHA JEWELLERY" style="-fx-font-family: 'Segoe UI', sans-serif; -fx-font-weight: bold; -fx-fill: #800000; -fx-font-size: 28px;"/>
                <Text text="Invoice System" style="-fx-fill: gray; -fx-font-size: 14px;"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS" />

            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Button text="Sales History" onAction="#onViewHistory" styleClass="accent"/>

                <VBox alignment="CENTER_RIGHT" spacing="5">
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Label text="Sold By:" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="soldByField" promptText="Staff Name" prefWidth="120"/>
                    </HBox>
                </VBox>
            </HBox>
        </HBox>

        <Separator />

        <GridPane hgap="20.0" vgap="15.0">
            <Label text="Customer Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="customerNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="250"/>

            <Label text="Phone Number:" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="phoneField" GridPane.columnIndex="3" GridPane.rowIndex="0" prefWidth="200"/>

            <Label text="Gold Rate (22K):" GridPane.columnIndex="4" GridPane.rowIndex="0" style="-fx-text-fill: #800000; -fx-font-weight: bold;"/>
            <TextField fx:id="rate22kField" text="1340" prefWidth="100" GridPane.columnIndex="5" GridPane.rowIndex="0"/>

            <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
            <TextField fx:id="customerAddressField" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="3"/>

            <Label text="Gold Rate (24K):" GridPane.columnIndex="4" GridPane.rowIndex="1" style="-fx-text-fill: #800000; -fx-font-weight: bold;"/>
            <TextField fx:id="rate24kField" text="1430" prefWidth="100" GridPane.columnIndex="5" GridPane.rowIndex="1"/>
        </GridPane>
    </VBox>
</top>

<center>
    <VBox spacing="15.0" style="-fx-padding: 20 0 20 0;">
        <TableView fx:id="itemTable" VBox.vgrow="ALWAYS" editable="true" fixedCellSize="40.0">
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            <columns>
                <TableColumn fx:id="descCol" text="Particulars" minWidth="150" style="-fx-alignment: CENTER-LEFT"/>

                <TableColumn fx:id="purityCol" text="Purity" minWidth="60" style="-fx-alignment: CENTER"/>
                <TableColumn fx:id="unitCol" text="Unit" minWidth="60" style="-fx-alignment: CENTER"/>

                <TableColumn fx:id="netWtCol" text="Net Weight" style="-fx-alignment: CENTER-LEFT"/>
                <TableColumn fx:id="wastageCol" text="Wastage" style="-fx-alignment: CENTER-LEFT"/>

                <TableColumn fx:id="totalWtCol" text="Total Weight" style="-fx-alignment: CENTER-LEFT"/>

                <TableColumn fx:id="stoneCol" text="Stones ($)" style="-fx-alignment: CENTER-LEFT"/>
                <TableColumn fx:id="wagesCol" text="Wages ($)" style="-fx-alignment: CENTER-LEFT"/>
                <TableColumn fx:id="totalCol" text="Amount ($)" style="-fx-font-weight: bold; -fx-alignment: CENTER-RIGHT"/>
            </columns>
        </TableView>

        <HBox spacing="10">
            <Button text="+ Add New Item" onAction="#addEmptyRow" styleClass="button-outlined"/>
        </HBox>
    </VBox>
</center>

<bottom>
    <VBox style="-fx-background-color: -color-bg-subtle; -fx-padding: 25; -fx-background-radius: 10; -fx-border-color: lightgray; -fx-border-radius: 10;">
        <HBox spacing="50" alignment="TOP_RIGHT">

            <VBox spacing="15" alignment="BOTTOM_LEFT" HBox.hgrow="ALWAYS">
                <Label text="Actions" style="-fx-font-weight: bold; -fx-text-fill: gray;"/>
                <HBox spacing="15">
                    <Button text="Start New Invoice" onAction="#onNewInvoice" styleClass="danger" style="-fx-font-size: 16px; -fx-padding: 10 30;"/>
                    <Region prefWidth="20"/>
                    <Button text="SAVE &amp; PRINT" onAction="#onSaveAndPrint" styleClass="success" style="-fx-font-size: 16px; -fx-padding: 10 30;"/>
                </HBox>
            </VBox>

            <GridPane hgap="15" vgap="8" alignment="CENTER_RIGHT">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints prefWidth="150"/>
                </columnConstraints>

                <Label text="Subtotal:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="subTotalLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Old Gold ($):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="oldGoldField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Discount ($):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="discountField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="GST (%):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="gstField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Separator GridPane.rowIndex="4" GridPane.columnSpan="2"/>

                <Label text="GRAND TOTAL:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <Label fx:id="grandTotalLabel" text="0.00" GridPane.rowIndex="5" GridPane.columnIndex="1" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

                <Label text="Advance Paid:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="advanceField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <Label text="BALANCE DUE:" GridPane.rowIndex="7" GridPane.columnIndex="0" style="-fx-text-fill: red; -fx-font-weight: bold; -fx-font-size: 16px;"/>
                <Label fx:id="balanceLabel" text="0.00" GridPane.rowIndex="7" GridPane.columnIndex="1" style="-fx-text-fill: red; -fx-font-weight: bold; -fx-font-size: 16px;"/>
            </GridPane>
        </HBox>
    </VBox>
</bottom>
</BorderPane>